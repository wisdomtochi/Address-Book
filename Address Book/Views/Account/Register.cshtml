@model Address_Book.DTO.Write.RegisterViewModel
c

<div class="row">
    <div class="col-md-12">
        <form method="post"  asp-action="register">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control mt-2 mb-2" />
                <span asp-validation-for="Email" class="text-danger"/>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control mt-2 mb-2" />
                <span asp-validation-for="Password" class="text-danger" />
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control  mt-2 mb-2" />
                <span asp-validation-for="ConfirmPassword" class="text-danger" />
            </div>
             
            <button type="submit" class="btn btn-primary mt-2 mb-2">Register</button>
        </form>
    </div>
</div>